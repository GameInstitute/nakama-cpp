{
    "default-features": ["wslay", "curl"],
    "dependencies": [
        "protobuf",
        "rapidjson",
        "optional-lite"
    ],
    "features": {
        "wslay": {
            "name": "wslay",
            "platform": "linux | osx | ios"
        },
        "curl": {
            "name": "curl",
            "default-features": false,
            "features": [
                "ssl"
            ],
            "platform": "linux | osx | ios"
        },
        "libcxx": {
            "dependencies": [
                {
                    "name": "llvm",
                    "platform": "linux",
                    "default-features": false,
                    "features": [
                        "libcxx"
                    ]
                }
            ]
        },
        "grpc": {
            "dependencies": [
                "grpc"
            ]
        }
    }
}